<%= form_for @topic, :url => topic_path(@topic), :method => :patch do |f| %>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>

    <%= f.label :cover, "Cover" %>
    <%= f.text_field :cover %>

    <%= f.label :content, "Content" %>
    <%= f.text_area :content %>

    <%= f.submit "Update" %>
<% end %>
